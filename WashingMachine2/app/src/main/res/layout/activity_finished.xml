<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textFinished1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle finished"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textFinished2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFinished1"
        android:text="To open the hatch press the button near the machine or this one"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/BOpenHatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFinished2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="onBOpenHatchClick"
        android:text="  Open  "
        android:textColor="@android:color/white"
        android:textSize="30sp" />
</RelativeLayout>